<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="horizontal"
    tools:context="com.amsu.vitaliy.finalproject_vitalyi_rudoy.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/beatles"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:onClick="showTheBestSong"
            card_view:cardCornerRadius="6dp">

            <include layout="@layout/pre_beatles" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/lana_del_rey"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_weight="1"
            android:onClick="showTheBestSong"
            card_view:cardCornerRadius="6dp">

            <include layout="@layout/pre_lana_del_rey" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/ocean"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:onClick="showTheBestSong"
            card_view:cardCornerRadius="6dp">

            <include layout="@layout/pre_ocean_elzy" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/offspring"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_weight="1"
            android:onClick="showTheBestSong"
            card_view:cardCornerRadius="6dp">

            <include layout="@layout/pre_offspring" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/nirvana"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:onClick="showTheBestSong"
            card_view:cardCornerRadius="6dp">

            <include layout="@layout/pre_nirvana" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/empty_card"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_columnWeight="1"

            android:layout_weight="1"
            card_view:cardCornerRadius="6dp">


        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>